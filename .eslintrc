{
  "env": {
    "node": true,
    "browser": true
  },
  "extends": [
    "rg-base",
    "rg-node",
    "rg-browser",
    "rg-react"
  ],
  "parser": "babel-eslint",
  "rules": {
    "prettier/prettier": ["error", {
      "bracketSpacing": true,
      "jsxBracketSameLine": false,
      "overrides": [{
        "files": "*.json",
        "options": {
          "parser": "json"
        }
      }],
      "parser": "babylon",
      "printWidth": 120,
      "semi": true,
      "singleQuote": true,
      "tabWidth": 4,
      "trailingComma": "all",
      "useTabs": false
    }]
  }
}
